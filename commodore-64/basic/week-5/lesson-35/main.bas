REM *** LESSON 35: SHOOTING GAME ***
REM WOW Moment
NEW
10 REM *** TARGET SHOOTER ***
20 PRINT CHR$(147)
30 PRINT "PRESS SPACE TO FIRE"
40 REM SETUP SPRITES
50 FOR I=832 TO 894:POKE I,255:NEXT I
60 POKE 2040,13:POKE 2041,13
70 POKE 53269,3:POKE 53287,1:POKE 53288,2
80 REM PLAYER & BULLET
90 PX=160:BY=200:F=0
100 REM TARGETS
110 FOR I=0 TO 4
120 POKE 1100+I*5,81
130 POKE 55396+I*5,2
140 NEXT I
150 SC=0:TA=5
160 GET K$
170 IF K$="A" THEN PX=PX-3
180 IF K$="D" THEN PX=PX+3
190 IF K$=" " AND F=0 THEN F=1:BX=PX:BY=200
200 REM MOVE BULLET
210 IF F=1 THEN BY=BY-5
220 IF BY<50 THEN F=0
230 REM CHECK HITS
240 IF F=1 THEN P=1024+INT(BY/8)*40+INT(BX/8)
250 IF F=1 AND PEEK(P)=81 THEN POKE P,32:SC=SC+10:F=0:TA=TA-1
260 REM DISPLAY
270 POKE 53248,PX:POKE 53249,200
280 IF F=1 THEN POKE 53250,BX:POKE 53251,BY
290 PRINT CHR$(19)
300 PRINT "SCORE:";SC;" TARGETS:";TA
310 IF TA=0 THEN PRINT "ALL DESTROYED!":END
320 GOTO 160