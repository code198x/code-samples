REM *** LESSON 40: HIGH SCORE TABLE ***
REM Practical Example
10 REM *** ADD AND SORT ***
20 DIM N$(5),S(5)
30 N$(1)="ACE":S(1)=1500
40 N$(2)="MAX":S(2)=1200
50 N$(3)="ZED":S(3)=900
60 REM NEW SCORE
70 INPUT "NAME (3 LETTERS)";NA$
80 INPUT "SCORE";NS
90 REM FIND POSITION
100 P=4
110 FOR I=1 TO 3
120 IF NS>S(I) THEN P=I:GOTO 150
130 NEXT I
140 REM INSERT SCORE
150 FOR I=3 TO P STEP -1
160 N$(I+1)=N$(I)
170 S(I+1)=S(I)
180 NEXT I
190 N$(P)=NA$:S(P)=NS
200 REM DISPLAY
210 PRINT CHR$(147)
220 FOR I=1 TO 4
230 PRINT I;". ";N$(I);SPC(8);S(I)
240 NEXT I
250 END