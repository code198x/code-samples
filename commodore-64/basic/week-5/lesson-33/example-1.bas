10 REM *** SCREEN PAGER ***
20 LINES=6:TOTAL=18:DIM PAGE$(TOTAL-1)
30 FOR I=0 TO TOTAL-1:READ PAGE$(I):NEXT I
40 MAXPAGE=INT((TOTAL-1)/LINES)
50 SP=0:GOSUB 200
60 GET K$
70 IF K$="" THEN 60
80 IF K$="A" AND SP>0 THEN SP=SP-1:GOSUB 200
90 IF K$="D" AND SP<MAXPAGE THEN SP=SP+1:GOSUB 200
100 IF K$="Q" THEN END
110 GOTO 60
200 PRINT CHR$(147);"STARDOCK BRIEFING"
210 BASE=SP*LINES
220 FOR R=0 TO LINES-1
230 IDX=BASE+R
240 IF IDX>=TOTAL THEN PRINT"":GOTO 270
250 PRINT PAGE$(IDX)
270 NEXT R
280 PRINT:PRINT "A=PREV  D=NEXT  Q=QUIT"
290 PRINT "PAGE";SP+1;"OF";MAXPAGE+1
300 RETURN
