REM Basic Example
10 REM *** PATTERN REPEAT ***
20 PRINT CHR$(147)
30 DIM P(3)
40 P(1)=7:P(2)=4:P(3)=2
50 PRINT "WATCH THE PATTERN:"
60 FOR I=1 TO 3
70 POKE 53281,P(I)
80 FOR J=1 TO 30:NEXT J
90 POKE 53281,0
100 FOR J=1 TO 20:NEXT J
110 NEXT I
120 PRINT "ENTER 3 COLOURS (1-7):"
130 FOR I=1 TO 3
140 INPUT "COLOUR";C
150 IF C<>P(I) THEN PRINT "WRONG!":END
160 NEXT I
170 PRINT "CORRECT!"