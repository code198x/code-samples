REM *** LESSON 51: GAME STATES ***
REM WOW Moment
NEW
10 REM *** COMPLETE GAME STATES ***
20 S=0:SC=0:LI=3
30 REM *** STATE DISPATCHER ***
40 ON S+1 GOTO 100,200,300,400
50 REM
100 REM *** TITLE STATE ***
110 PRINT CHR$(147)
120 POKE 53280,6:POKE 53281,14
130 PRINT
140 PRINT "    *** SPACE CHASE ***"
150 PRINT
160 PRINT "      LIVES: 3"
170 PRINT "      SCORE: 0"
180 PRINT
190 PRINT "   PRESS FIRE TO START"
200 GET K$:IF K$="" THEN GOTO 200
210 SC=0:LI=3:S=1
220 GOTO 30
230 REM
300 REM *** PLAY STATE ***
310 PRINT CHR$(147)
320 POKE 53280,0:POKE 53281,0
330 PRINT "LIVES:";LI;" SCORE:";SC
340 PRINT
350 PRINT "PLAYING..."
360 PRINT "(SPACE=POINT, Q=DIE)"
370 REM *** SIMPLE GAMEPLAY ***
380 GET K$:IF K$="" THEN GOTO 380
390 IF K$=" " THEN SC=SC+10:GOTO 300
400 IF K$="Q" THEN LI=LI-1:S=2
410 GOTO 300
420 REM
500 REM *** DEAD STATE ***
510 PRINT CHR$(147)
520 POKE 53280,2:POKE 53281,8
530 PRINT
540 PRINT "       YOU DIED!"
550 PRINT
560 PRINT "    LIVES LEFT:";LI
570 FOR I=1 TO 1500:NEXT I
580 IF LI>0 THEN S=1:GOTO 30
590 S=3
600 GOTO 30
610 REM
700 REM *** GAME OVER STATE ***
710 PRINT CHR$(147)
720 POKE 53280,0:POKE 53281,0
730 PRINT
740 PRINT "      GAME OVER"
750 PRINT
760 PRINT "   FINAL SCORE:";SC
770 PRINT
780 PRINT
790 PRINT " PRESS FIRE TO RESTART"
800 FOR I=1 TO 100:NEXT I
810 GET K$:IF K$="" THEN GOTO 810
820 S=0
830 GOTO 30