REM *** LESSON 54: BOSS FIGHT BASICS ***
REM WOW Moment
NEW
10 REM *** BOSS BATTLE ***
20 PRINT CHR$(147)
30 POKE 53280,2:POKE 53281,8
40 REM *** INIT ***
50 BH=20:BX=15:PX=10
60 DX=1:AT=0:PH=1
70 REM *** MAIN LOOP ***
80 PRINT CHR$(19)
90 REM *** HEALTH BAR ***
100 PRINT "BOSS: ";
110 FOR I=1 TO BH
120 PRINT CHR$(18);" ";CHR$(146);
130 NEXT I
140 PRINT
150 PRINT "PHASE:";PH;" PATTERN:";
160 IF PH=1 THEN PRINT "SLOW"
170 IF PH=2 THEN PRINT "FAST"
180 IF PH=3 THEN PRINT "ERRATIC"
190 PRINT
200 REM *** ARENA ***
210 FOR I=0 TO 30
220 IF I=BX THEN PRINT CHR$(18);"B";CHR$(146);
230 IF I=PX THEN PRINT "P";
240 IF I<>BX AND I<>PX THEN PRINT ".";
250 NEXT I
260 PRINT
270 REM *** ATTACK INDICATOR ***
280 AT=AT+1
290 IF AT>50 THEN AT=0:PRINT "*** BOSS ATTACKS! ***":FOR J=1 TO 500:NEXT J
300 PRINT
310 PRINT "SPACE=SHOOT A/D=MOVE"
320 REM *** PHASE LOGIC ***
330 IF BH<15 AND PH=1 THEN PH=2:DX=2:POKE 53280,10
340 IF BH<8 AND PH=2 THEN PH=3:POKE 53280,7
350 REM *** BOSS MOVEMENT ***
360 IF PH=1 THEN BX=BX+DX
370 IF PH=2 THEN BX=BX+DX
380 IF PH=3 THEN BX=BX+(INT(RND(1)*3)-1)*2
390 IF BX>28 OR BX<5 THEN DX=-DX
400 REM *** INPUT ***
410 GET K$
420 IF K$="D" AND PX<30 THEN PX=PX+1
430 IF K$="A" AND PX>0 THEN PX=PX-1
440 IF K$=" " AND ABS(PX-BX)<3 THEN BH=BH-1:PRINT "HIT!":POKE 53280,1:FOR J=1 TO 100:NEXT J:POKE 53280,2
450 IF BH>0 THEN GOTO 80
460 REM *** VICTORY ***
470 PRINT CHR$(147)
480 POKE 53280,5:POKE 53281,13
490 PRINT
500 PRINT "    *** BOSS DEFEATED! ***"
510 PRINT
520 PRINT "      YOU ARE VICTORIOUS!"