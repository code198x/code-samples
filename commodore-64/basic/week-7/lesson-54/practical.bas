REM *** LESSON 54: BOSS FIGHT BASICS ***
REM Practical Example
10 REM *** MOVING BOSS ***
20 PRINT CHR$(147)
30 BH=15:BX=20:PX=10:DX=1
40 PRINT CHR$(19)
50 PRINT "BOSS HP:";BH;"  YOUR POS:";PX
60 PRINT
70 FOR I=0 TO 30
80 IF I=BX THEN PRINT "B";
90 IF I=PX THEN PRINT "P";
100 IF I<>BX AND I<>PX THEN PRINT ".";
110 NEXT I
120 PRINT
130 PRINT "SPACE=SHOOT A/D=MOVE"
140 REM *** BOSS MOVES ***
150 BX=BX+DX
160 IF BX>28 OR BX<5 THEN DX=-DX
170 REM *** INPUT ***
180 GET K$
190 IF K$="D" THEN PX=PX+1
200 IF K$="A" THEN PX=PX-1
210 IF K$=" " AND PX=BX THEN BH=BH-1:PRINT "HIT!"
220 IF BH>0 THEN GOTO 40
230 PRINT CHR$(147)
240 PRINT "BOSS DEFEATED!"