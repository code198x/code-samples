REM *** LESSON 55: ATTRACT MODE/DEMO ***
REM WOW Moment
NEW
10 REM *** ATTRACT MODE ***
20 PRINT CHR$(147)
30 POKE 53280,0:POKE 53281,11
40 REM *** INIT ***
50 PX=5:EX=20:SC=0:T=0
60 REM *** MAIN DEMO LOOP ***
70 PRINT CHR$(19)
80 T=T+1
90 PRINT "*** AUTO-DEMO ***"
100 PRINT
110 PRINT "SCORE:";SC;" TIME:";T
120 PRINT
130 PRINT "(PRESS FIRE TO PLAY)"
140 PRINT
150 REM *** DRAW GAME ***
160 FOR I=0 TO 30
170 IF I=PX THEN PRINT CHR$(18);"P";CHR$(146);
180 IF I=EX THEN PRINT "E";
190 IF I<>PX AND I<>EX THEN PRINT ".";
200 NEXT I
210 PRINT
220 PRINT
230 PRINT "AI DECISION: ";
240 REM *** SIMPLE AI ***
250 IF EX>PX+3 THEN PRINT "MOVE RIGHT":PX=PX+1
260 IF EX<PX-3 THEN PRINT "MOVE LEFT":PX=PX-1
270 IF ABS(EX-PX)<4 THEN PRINT "ATTACK!":SC=SC+10:EX=5+INT(RND(1)*20)
280 REM *** ENEMY MOVES ***
290 IF RND(1)<0.3 THEN EX=EX+INT(RND(1)*3)-1
300 IF EX<5 THEN EX=5
310 IF EX>28 THEN EX=28
320 REM *** TIMEOUT CHECK ***
330 IF T>100 THEN PRINT CHR$(147):PRINT "DEMO FINISHED":FOR I=1 TO 1500:NEXT I:GOTO 20
340 REM *** EXIT TO GAME ***
350 GET K$:IF K$<>"" THEN GOSUB 500
360 FOR I=1 TO 150:NEXT I
370 GOTO 70
380 REM
500 REM *** START ACTUAL GAME ***
510 PRINT CHR$(147)
520 POKE 53280,6:POKE 53281,14
530 PRINT
540 PRINT "  *** STARTING GAME ***"
550 PRINT
560 PRINT "  (AI DEMO HAS ENDED)"
570 PRINT
580 PRINT "  YOUR TURN TO PLAY!"
590 PRINT
600 FOR I=1 TO 2000:NEXT I
610 PRINT CHR$(147)
620 PRINT "GAME WOULD START HERE..."
630 PRINT
640 PRINT "PRESS FIRE TO RETURN"
650 GET K$:IF K$="" THEN GOTO 650
660 GOTO 20