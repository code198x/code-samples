REM *** LESSON 55: ATTRACT MODE/DEMO ***
REM Practical Example
10 REM *** SCRIPTED DEMO ***
20 PRINT CHR$(147)
30 DIM MV$(10)
40 MV$(1)="RRRR":MV$(2)="UUU"
50 MV$(3)="LLLL":MV$(4)="DDD"
60 MV$(5)="RRRR"
70 X=5:Y=5:M=1:P=1
80 PRINT CHR$(19)
90 PRINT "AUTO-DEMO (PRESS KEY TO PLAY)"
100 FOR I=1 TO 5:PRINT:NEXT I
110 FOR I=0 TO 10
120 IF I=X THEN PRINT "@";
130 IF I<>X THEN PRINT ".";
140 NEXT I
150 REM *** EXECUTE SCRIPT ***
160 IF P>LEN(MV$(M)) THEN M=M+1:P=1
170 IF M>5 THEN M=1
180 C$=MID$(MV$(M),P,1)
190 IF C$="R" THEN X=X+1
200 IF C$="L" THEN X=X-1
210 P=P+1
220 FOR I=1 TO 200:NEXT I
230 GET K$:IF K$<>"" THEN PRINT "STARTING GAME...":END
240 GOTO 80