REM *** LESSON 53: POWER-UPS & COLLECTIBLES ***
REM Practical Example
10 REM *** TIMED POWER-UP ***
20 PRINT CHR$(147)
30 X=10:PX=20:PW=0:TM=0
40 PRINT CHR$(19)
50 IF PW=1 THEN PRINT "*** INVINCIBLE ***";
60 PRINT "TIME LEFT:";TM
70 PRINT
80 PRINT "YOU:";X;" POWER-UP:";PX
90 GET K$
100 IF K$="D" AND X<30 THEN X=X+1
110 IF K$="A" AND X>0 THEN X=X-1
120 IF X=PX AND PW=0 THEN PW=1:TM=50:PX=-1
130 IF PW=1 THEN TM=TM-1
140 IF TM=0 THEN PW=0
150 GOTO 40