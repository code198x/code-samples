NEW
10 REM *** CUTSCENE PLAYER ***
20 GOSUB 9000
30 PRINT CHR$(147);"LEVEL 1 COMPLETE!"
40 PRINT
50 GOSUB 1000
60 PRINT :PRINT "LOADING NEXT LEVEL..."
70 END

9000 REM *** COUNT LINES ***
9010 SCENE=0
9020 RESTORE 5000
9030 READ SPEAKER$
9040 IF SPEAKER$="END" THEN RETURN
9050 READ LINE$:READ DELAY
9060 SCENE=SCENE+1
9070 GOTO 9030

1000 REM *** PLAY CUTSCENE ***
1010 PRINT CHR$(147)
1020 PRINT "~ GALACTIC NEWSFEED ~"
1030 RESTORE 5000
1040 FOR I=1 TO SCENE
1050 READ SPEAKER$:IF SPEAKER$="END" THEN RETURN
1060 READ LINE$:READ WAITFRAMES
1070 PRINT :PRINT SPEAKER$;":"
1080 PRINT "  ";LINE$
1090 GOSUB 1200
1100 NEXT I
1110 RETURN

1200 REM *** PAUSE WITH SKIP ***
1210 FRAME=0:TI$="000000"
1220 GET K$:IF K$<>"" THEN RETURN
1230 IF TI>FRAME THEN FRAME=FRAME+1
1240 IF FRAME<WAITFRAMES THEN 1220
1250 RETURN

