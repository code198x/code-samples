REM *** LESSON 52: DIFFICULTY LEVELS ***
REM Practical Example
10 REM *** MULTI-VARIABLE DIFFICULTY ***
20 PRINT CHR$(147)
30 PRINT "SELECT DIFFICULTY:"
40 PRINT
50 PRINT "1. EASY   (SLOW, FEW ENEMIES)"
60 PRINT "2. NORMAL (MEDIUM, NORMAL)"
70 PRINT "3. HARD   (FAST, MANY ENEMIES)"
80 PRINT
90 GET K$:IF K$="" THEN GOTO 90
100 D=VAL(K$)
110 IF D<1 OR D>3 THEN GOTO 90
120 REM *** SET DIFFICULTY VARS ***
130 SP=D+1
140 EN=D*3
150 PT=10/D
160 PRINT CHR$(147)
170 PRINT "DIFFICULTY:";D
180 PRINT "SPEED:";SP
190 PRINT "ENEMIES:";EN
200 PRINT "POINTS PER HIT:";PT