REM *** LESSON 52: DIFFICULTY LEVELS ***
REM Basic Example
10 REM *** BASIC DIFFICULTY ***
20 PRINT CHR$(147)
30 PRINT "SELECT DIFFICULTY:"
40 PRINT "1=EASY 2=NORMAL 3=HARD"
50 GET K$:IF K$="" THEN GOTO 50
60 D=VAL(K$)
70 IF D<1 OR D>3 THEN GOTO 50
80 SP=D*2
90 PRINT CHR$(147)
100 PRINT "SPEED:";SP
110 FOR I=1 TO 100
120 PRINT ".";
130 FOR J=1 TO SP*50:NEXT J
140 NEXT I