REM *** LESSON 45: SCREEN TRANSITIONS ***
REM WOW Moment
NEW
10 REM *** SCREEN TRANSITIONS ***
20 PRINT CHR$(147)
30 PRINT "*** TRANSITION DEMO ***"
40 PRINT
50 PRINT "1 = FADE OUT/IN"
60 PRINT "2 = WIPE DOWN"
70 PRINT "3 = WIPE ACROSS"
80 PRINT "4 = FLASH"
90 PRINT
100 PRINT "SELECT TRANSITION:"
110 GET K$:IF K$="" THEN GOTO 110
120 IF K$="1" THEN GOSUB 200
130 IF K$="2" THEN GOSUB 300
140 IF K$="3" THEN GOSUB 400
150 IF K$="4" THEN GOSUB 500
160 GOTO 20
170 REM
200 REM *** FADE TRANSITION ***
210 REM FADE OUT
220 FOR C=1 TO 0 STEP -1
230 FOR I=55296 TO 56295
240 POKE I,C
250 NEXT I
260 FOR D=1 TO 80:NEXT D
270 NEXT C
280 REM NEW SCENE
290 PRINT CHR$(147)
300 POKE 53280,RND(1)*15:POKE 53281,RND(1)*15
310 PRINT "*** NEW SCENE ***"
320 FOR I=1 TO 10:PRINT "CONTENT LINE";I:NEXT I
330 REM FADE IN
340 FOR C=0 TO 7
350 FOR I=55296 TO 56295
360 POKE I,C
370 NEXT I
380 FOR D=1 TO 80:NEXT D
390 NEXT C
400 RETURN
410 REM
420 REM *** WIPE DOWN ***
430 PRINT CHR$(147)
440 FOR R=0 TO 24
450 FOR C=0 TO 39
460 POKE 1024+R*40+C,160
470 POKE 55296+R*40+C,0
480 NEXT C
490 FOR D=1 TO 20:NEXT D
500 NEXT R
510 PRINT CHR$(147)
520 POKE 53280,RND(1)*15
530 PRINT "*** WIPED ***"
540 RETURN
550 REM
560 REM *** WIPE ACROSS ***
570 PRINT CHR$(147)
580 FOR C=0 TO 39
590 FOR R=0 TO 24
600 POKE 1024+R*40+C,160
610 POKE 55296+R*40+C,0
620 NEXT R
630 FOR D=1 TO 15:NEXT D
640 NEXT C
650 PRINT CHR$(147)
660 POKE 53280,RND(1)*15
670 PRINT "*** WIPED ACROSS ***"
680 RETURN
690 REM
700 REM *** FLASH ***
710 FOR F=1 TO 5
720 POKE 53280,1
730 FOR D=1 TO 50:NEXT D
740 POKE 53280,0
750 FOR D=1 TO 50:NEXT D
760 NEXT F
770 PRINT CHR$(147)
780 POKE 53280,RND(1)*15
790 PRINT "*** FLASH COMPLETE ***"
800 RETURN