REM *** LESSON 46: SAVE/LOAD TO DISK ***
REM Practical Example
10 REM *** SAVE/LOAD DEMO ***
20 PRINT CHR$(147)
30 PRINT "1 = SAVE SCORE"
40 PRINT "2 = LOAD SCORE"
50 GET K$:IF K$="" THEN GOTO 50
60 IF K$="1" THEN GOSUB 200
70 IF K$="2" THEN GOSUB 300
80 GOTO 20
90 REM
200 REM *** SAVE ***
210 INPUT "ENTER SCORE";SC
220 OPEN 1,8,2,"SCORE,S,W"
230 PRINT#1,SC
240 CLOSE 1
250 PRINT "SAVED!"
260 FOR D=1 TO 1000:NEXT D
270 RETURN
300 REM *** LOAD ***
310 OPEN 1,8,2,"SCORE,S,R"
320 INPUT#1,SC
330 CLOSE 1
340 PRINT "LOADED SCORE:";SC
350 FOR D=1 TO 1000:NEXT D
360 RETURN