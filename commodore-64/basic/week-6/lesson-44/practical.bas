10 REM *** SOUND EFFECTS ***
20 PRINT CHR$(147)
30 PRINT "1 = LASER"
40 PRINT "2 = EXPLOSION"
50 PRINT "3 = JUMP"
60 GET K$:IF K$="" THEN GOTO 60
70 IF K$="1" THEN GOSUB 200
80 IF K$="2" THEN GOSUB 300
90 IF K$="3" THEN GOSUB 400
100 GOTO 60
