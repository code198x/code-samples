REM LESSON 07 - GAME LOGIC DEMO
10 LIVES=3
20 SC=0
30 PRINT CHR$(147)
40 PRINT "LIVES: "; LIVES
50 PRINT "SC: "; SC
60 PRINT
70 PRINT "H = HIT (+10 POINTS)"
80 PRINT "M = MISS (-1 LIFE)"
90 PRINT "Q = QUIT"
100 PRINT
110 GET K$: IF K$="" THEN 110
120 IF K$="H" THEN SC=SC+10: GOTO 30
130 IF K$="M" THEN LIVES=LIVES-1
140 IF K$="Q" THEN PRINT "GAME OVER": END
150 IF LIVES<1 THEN PRINT "NO LIVES LEFT!": END
160 GOTO 30
