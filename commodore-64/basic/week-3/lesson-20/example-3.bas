5200 REM --- DRAW ROOM ---
5210 PRINT CHR$(147)
5220 PRINT TITLE$
5230 PRINT ""                                       : REM blank spacer
5240 FOR R=0 TO 9
5250 FOR C=0 TO 17
5260 LOC=SCREEN+(R+4)*40+(C+11)
5270 VAL=MAP(R,C)
5280 CHAR=32:COL=1
5290 IF VAL=1 THEN CHAR=160:COL=0
5300 IF VAL=2 THEN CHAR=4:COL=7
5310 IF VAL=3 THEN CHAR=81:COL=2
5320 POKE LOC,CHAR
5330 POKE COLOR+(R+4)*40+(C+11),COL
5340 NEXT C
5350 NEXT R
5360 RETURN

5300 REM --- DRAW ENEMIES ---
5310 FOR I=0 TO 3
5320 IF EX(I)=0 AND EY(I)=0 THEN NEXT I:GOTO 5340
5330 POKE SCREEN+(EY(I)+4)*40+(EX(I)+11),81
5340 NEXT I
5350 RETURN
