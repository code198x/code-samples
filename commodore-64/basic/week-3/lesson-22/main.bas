REM *** LESSON 22: PIANO KEYS ***
REM Keyboard Piano A-G

NEW
10 REM *** PIANO KEYS ***
20 POKE 54296,15:REM MAX VOLUME
25 POKE 54277,0:POKE 54278,240:REM ADSR
30 PRINT CHR$(147);"PRESS A-G FOR NOTES"
40 GET K$:IF K$="" THEN 40
50 IF K$="A" THEN F=16*256+195
60 IF K$="B" THEN F=18*256+209
70 IF K$="C" THEN F=20*256+230
80 IF K$="D" THEN F=22*256+96
90 IF K$="E" THEN F=24*256+241
100 IF K$="F" THEN F=27*256+141
110 IF K$="G" THEN F=30*256+578
120 IF F=0 THEN 40
130 POKE 54273,F/256:REM HIGH BYTE
140 POKE 54272,F AND 255:REM LOW BYTE
150 POKE 54276,17:REM WAVEFORM ON
160 FOR I=1 TO 100:NEXT I
170 POKE 54276,16:REM OFF
180 F=0:GOTO 40
