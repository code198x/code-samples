NEW
10 INPUT "COMMAND";CM$
20 CM$=CM$+" "
30 FOR I=1 TO LEN(CM$)
40 CH$=MID$(CM$,I,1)
50 IF CH$>="a" AND CH$<="z" THEN MID$(CM$,I,1)=CHR$(ASC(CH$)-32)
60 NEXT I
70 IF LEFT$(CM$,1)=" " THEN CM$=MID$(CM$,2):GOTO 70
80 IF RIGHT$(CM$,1)=" " THEN CM$=LEFT$(CM$,LEN(CM$)-1):GOTO 80
90 PRINT "NORMALISED:";CM$
