NEW
10 PRINT CHR$(147)
20 SCREEN=1024:COLOR=55296
30 X=8:Y=8:COL=2
40 FOR STEP=1 TO 25
50 GOSUB 2000        : REM draw block
60 FOR D=1 TO 120:NEXT D
70 GOSUB 2100        : REM erase block
80 X=X+1:Y=Y+1
90 NEXT STEP
100 END

2000 REM --- DRAW BLOCK ---
2010 FOR DY=0 TO 1
2020 FOR DX=0 TO 1
2030 LOC=SCREEN+(Y+DY)*40+(X+DX)
2040 POKE LOC,162
2050 POKE COLOR+(Y+DY)*40+(X+DX),COL
2060 NEXT DX
2070 NEXT DY
2080 RETURN

2100 REM --- ERASE BLOCK ---
2110 FOR DY=0 TO 1
2120 FOR DX=0 TO 1
2130 LOC=SCREEN+(Y+DY)*40+(X+DX)
2140 POKE LOC,32
2150 NEXT DX
2160 NEXT DY
2170 RETURN
