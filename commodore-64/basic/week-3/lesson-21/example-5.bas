5530 ENEMYDELAY=RULESPEED(ROOM)
6500 REM --- ENEMY LOOP ---
6510 FOR I=0 TO 2
6520 POKE SCREEN+(EY(I)+5)*40+(EX(I)+11),32
6530 IF STEP MOD ENEMYDELAY<>0 THEN GOTO 6580
6540 DX=0:DY=0
6550 IF EX(I)<PX-11 THEN DX=1
6560 IF EX(I)>PX-11 THEN DX=-1
6570 IF EY(I)<PY-5 THEN DY=1
6575 IF EY(I)>PY-5 THEN DY=-1
6580 NX=EX(I)+DX:NY=EY(I)+DY
6590 IF MAP(NY,NX)=1 THEN DX=0:DY=0
6600 EX(I)=EX(I)+DX:EY(I)=EY(I)+DY
6610 POKE SCREEN+(EY(I)+5)*40+(EX(I)+11),81
6620 IF EX(I)+11=PX AND EY(I)+5=PY THEN GOSUB 6100
6630 NEXT I
