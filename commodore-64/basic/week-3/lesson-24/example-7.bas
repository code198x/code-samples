4400 REM --- PLAYER INPUT ---
4410 GET K$:IF K$="" THEN RETURN
4420 NX=PX:NY=PY
4430 IF K$="W" OR K$=CHR$(145) THEN NY=PY-1
4440 IF K$="S" OR K$=CHR$(17) THEN NY=PY+1
4450 IF K$="A" OR K$=CHR$(157) THEN NX=PX-1
4460 IF K$="D" OR K$=CHR$(29) THEN NX=PX+1
4470 MX=NX-11:MY=NY-5
4480 IF MX<0 OR MX>17 OR MY<0 OR MY>9 THEN RETURN
4490 IF MAP(MY,MX)=1 THEN RETURN
4500 POKE SCREEN+PY*40+PX,32
4510 PX=NX:PY=NY
4520 POKE SCREEN+PY*40+PX,64
4530 RETURN
