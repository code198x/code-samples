REM *** LESSON 25: WASD CONTROLS ***
REM Keyboard Input for Movement

NEW
10 REM *** WASD CONTROLS ***
20 PRINT CHR$(147)
30 PRINT "USE W/A/S/D TO MOVE"
40 FOR I=832 TO 894:POKE I,255:NEXT I
50 POKE 2040,13:POKE 53287,3
60 POKE 53269,1
70 X=160:Y=120
80 GET K$
90 IF K$="W" THEN Y=Y-3
100 IF K$="S" THEN Y=Y+3
110 IF K$="A" THEN X=X-3
120 IF K$="D" THEN X=X+3
130 REM KEEP ON SCREEN
140 IF X<24 THEN X=24
150 IF X>320 THEN X=320
160 IF Y<50 THEN Y=50
170 IF Y>229 THEN Y=229
180 POKE 53248,X
190 POKE 53249,Y
200 GOTO 80
