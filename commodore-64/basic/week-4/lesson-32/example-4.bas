5400 REM --- PLAYER INPUT ---
5410 GET K$:IF K$="" THEN RETURN
5420 NX=PX:NY=PY
5430 IF K$="W" THEN NY=NY-3
5440 IF K$="S" THEN NY=NY+3
5450 IF K$="A" THEN NX=NX-3
5460 IF K$="D" THEN NX=NX+3
5470 IF NX<24 THEN NX=344
5480 IF NX>344 THEN NX=24
5490 IF NY<50 THEN NY=250
5500 IF NY>250 THEN NY=50
5510 PX=NX:PY=NY
5520 POKE 53248,PX:POKE 53249,PY
5530 REM check pickup
5540 MAPIDX=1024+INT((PY-50)/8)*40+INT((PX-24)/8)
5550 IF PEEK(MAPIDX)=81 THEN POKE MAPIDX,32:SCORE=SCORE+10
5560 RETURN
