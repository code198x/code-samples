REM *** LESSON 28: BEAT THE CLOCK ***
REM Timer Countdown

NEW
10 REM *** BEAT THE CLOCK ***
20 PRINT CHR$(147)
30 PRINT "COLLECT 10 DOTS IN 15 SECONDS!"
40 FOR I=832 TO 894:POKE I,255:NEXT I
50 POKE 2040,13:POKE 53269,1:POKE 53287,7
60 X=160:Y=120:SC=0
70 TI$="000000":T=900
80 REM PLACE 10 DOTS
90 FOR I=0 TO 9
100 POKE 1200+I*40+I*3,81
110 POKE 55296+I*40+I*3,7
120 NEXT I
130 GET K$
140 IF K$="W" THEN Y=Y-3
150 IF K$="S" THEN Y=Y+3
160 IF K$="A" THEN X=X-3
170 IF K$="D" THEN X=X+3
180 POKE 53248,X:POKE 53249,Y
190 REM CHECK DOTS
200 P=1024+INT(Y/8)*40+INT(X/8)
210 IF PEEK(P)=81 THEN POKE P,32:SC=SC+1
220 REM DISPLAY
230 PRINT CHR$(19)
240 PRINT "TIME:";INT((T-TI)/60);" DOTS:";SC
250 IF SC=10 THEN PRINT "YOU WIN!":END
260 IF TI<T THEN GOTO 130
270 PRINT "TIME UP! YOU LOSE!"
280 END
