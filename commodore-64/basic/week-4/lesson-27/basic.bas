REM Basic Example

10 REM *** BASIC SCORE ***
20 PRINT CHR$(147)
30 PRINT "SCORE:000"
40 FOR I=832 TO 894:POKE I,255:NEXT I
50 POKE 2040,13:POKE 53269,1:POKE 53287,7
60 X=160:Y=120:SC=0
70 GET K$
80 IF K$="W" THEN Y=Y-3
90 IF K$="S" THEN Y=Y+3
100 IF K$="A" THEN X=X-3
110 IF K$="D" THEN X=X+3
120 POKE 53248,X:POKE 53249,Y
130 REM SCORE AT BOTTOM
140 IF Y>220 THEN SC=SC+10:Y=50
150 REM UPDATE DISPLAY
160 POKE 1030,SC/100+48
170 POKE 1031,(SC/10) AND 15+48
180 POKE 1032,SC AND 15+48
190 GOTO 70
