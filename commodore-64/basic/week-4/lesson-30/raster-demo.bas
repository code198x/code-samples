10 REM *** CLASSIC RASTER DEMO ***
20 PRINT CHR$(147);
30 POKE 53280,0: POKE 53281,0
40 DIM Y(3),D(3),CB(7)
50 CB(0)=6:CB(1)=14:CB(2)=3:CB(3)=1
60 CB(4)=1:CB(5)=3:CB(6)=14:CB(7)=6
70 REM INIT BAR POSITIONS
80 Y(0)=50: D(0)=1
90 Y(1)=100: D(1)=-1
100 Y(2)=150: D(2)=1
110 FOR I = 0 TO 11
120 PRINT "    COMMODORE 64 RASTER DEMO    ";
130 NEXT I
999 REM
1000 REM *** MAIN LOOP ***
1010 FOR B = 0 TO 2
1020 REM UPDATE POSITION
1030 Y(B) = Y(B) + D(B)
1040 IF Y(B) > 220 THEN D(B) = -1
1050 IF Y(B) < 30 THEN D(B) = 1
1060 REM WAIT FOR POSITION
1070 IF PEEK(53266) < Y(B) THEN GOTO 1070
1080 REM DRAW BAR
1090 FOR I = 0 TO 7
1100 POKE 53281, CB(I)
1110 R = PEEK(53266) + 1
1120 IF R > 255 THEN R = R - 256
1130 IF PEEK(53266) < R THEN GOTO 1130
1140 NEXT I
1150 POKE 53281, 0
1160 NEXT B
1170 GOTO 1010
