REM *** LESSON 58: PUZZLE GAME (SOKOBAN-STYLE) ***
REM Practical Example
10 REM *** BOXES ***
20 PRINT CHR$(147)
30 PX=2:PY=2:BX=4:BY=4
40 PRINT CHR$(19)
50 FOR Y=1 TO 8
60 FOR X=1 TO 8
70 IF X=PX AND Y=PY THEN PRINT "P";
80 IF X=BX AND Y=BY THEN PRINT "B";
90 IF X<>PX OR Y<>PY THEN IF X<>BX OR Y<>BY THEN PRINT ".";
100 NEXT X:PRINT:NEXT Y
110 PRINT "PUSH BOX TO (7,7)"
120 GET K$
130 NX=PX:NY=PY
140 IF K$="W" THEN NY=NY-1
150 IF K$="S" THEN NY=NY+1
160 IF K$="A" THEN NX=NX-1
170 IF K$="D" THEN NX=NX+1
180 IF NX=BX AND NY=BY THEN BX=BX+(NX-PX):BY=BY+(NY-PY):PX=NX:PY=NY:GOTO 40
190 PX=NX:PY=NY
200 IF BX=7 AND BY=7 THEN PRINT "WIN!":END
210 GOTO 40