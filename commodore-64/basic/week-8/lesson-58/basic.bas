REM *** LESSON 58: PUZZLE GAME (SOKOBAN-STYLE) ***
REM Basic Example
10 REM *** BASIC GRID ***
20 PRINT CHR$(147)
30 PX=5:PY=5
40 PRINT CHR$(19)
50 FOR Y=1 TO 10
60 FOR X=1 TO 10
70 IF X=PX AND Y=PY THEN PRINT "P";
80 IF X<>PX OR Y<>PY THEN PRINT ".";
90 NEXT X
100 PRINT
110 NEXT Y
120 GET K$
130 IF K$="W" THEN PY=PY-1
140 IF K$="S" THEN PY=PY+1
150 IF K$="A" THEN PX=PX-1
160 IF K$="D" THEN PX=PX+1
170 GOTO 40