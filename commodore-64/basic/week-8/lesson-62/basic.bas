10 REM *** BASIC PADDLES ***
20 PRINT CHR$(147)
30 P1=5:P2=5
40 PRINT CHR$(19)
50 FOR Y=1 TO 10
60 IF Y=P1 THEN PRINT "1";
70 IF Y<>P1 THEN PRINT " ";
80 NEXT Y
90 PRINT TAB(30);
100 FOR Y=1 TO 10
110 IF Y=P2 THEN PRINT "2";
120 IF Y<>P2 THEN PRINT " ";
130 NEXT Y
140 GET K$
150 IF K$="W" THEN P1=P1-1
160 IF K$="S" THEN P1=P1+1
170 IF K$="I" THEN P2=P2-1
180 IF K$="K" THEN P2=P2+1
190 GOTO 40