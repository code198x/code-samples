REM *** LESSON 62: SPORTS GAME (PONG-STYLE) ***
REM Practical Example
10 REM *** PADDLE + BALL ***
20 PRINT CHR$(147)
30 P1=5:P2=5:BX=15:BY=5:DX=1:DY=1
40 PRINT CHR$(19)
50 FOR Y=1 TO 10
60 IF Y=P1 THEN PRINT "1";
70 IF Y<>P1 THEN PRINT " ";
80 NEXT Y
90 PRINT TAB(BX);"O";
100 PRINT TAB(30);
110 FOR Y=1 TO 10
120 IF Y=P2 THEN PRINT "2";
130 IF Y<>P2 THEN PRINT " ";
140 NEXT Y
150 GET K$
160 IF K$="W" AND P1>1 THEN P1=P1-1
170 IF K$="S" AND P1<10 THEN P1=P1+1
180 IF K$="I" AND P2>1 THEN P2=P2-1
190 IF K$="K" AND P2<10 THEN P2=P2+1
200 REM *** BALL MOVE ***
210 BX=BX+DX:BY=BY+DY
220 IF BY<1 OR BY>10 THEN DY=-DY
230 IF BX=1 AND BY=P1 THEN DX=-DX
240 IF BX=30 AND BY=P2 THEN DX=-DX
250 IF BX<1 OR BX>30 THEN PRINT "SCORE!":END
260 FOR I=1 TO 100:NEXT I
270 GOTO 40