REM *** LESSON 62: SPORTS GAME (PONG-STYLE) ***
REM WOW Moment
NEW
10 REM *** PONG ***
20 PRINT CHR$(147)
30 POKE 53280,0:POKE 53281,0
40 REM *** INIT ***
50 S1=0:S2=0:FS=5
60 REM *** ROUND START ***
70 P1=10:P2=10:BX=20:BY=10
80 DX=1:DY=1
90 IF RND(1)<0.5 THEN DX=-1
100 IF RND(1)<0.5 THEN DY=-1
110 REM *** MAIN LOOP ***
120 PRINT CHR$(19)
130 PRINT "PLAYER 1: ";S1;"    PLAYER 2: ";S2
140 PRINT "FIRST TO ";FS;" WINS!"
150 PRINT
160 REM *** DRAW COURT ***
170 FOR Y=1 TO 20
180 REM *** LEFT PADDLE ***
190 IF Y>=P1-2 AND Y<=P1+2 THEN PRINT CHR$(18);"#";CHR$(146);
200 IF Y<P1-2 OR Y>P1+2 THEN PRINT " ";
210 REM *** BALL ***
220 IF Y=BY THEN PRINT TAB(BX);"O";
230 REM *** NET ***
240 IF Y MOD 2=0 THEN PRINT TAB(20);":";
250 IF Y MOD 2<>0 THEN PRINT TAB(20);" ";
260 REM *** RIGHT PADDLE ***
270 IF Y>=P2-2 AND Y<=P2+2 THEN PRINT TAB(38);CHR$(18);"#";CHR$(146)
280 IF Y<P2-2 OR Y>P2+2 THEN PRINT TAB(38);" "
290 PRINT
300 NEXT Y
310 PRINT
320 PRINT "P1: W/S    P2: I/K"
330 REM *** INPUT ***
340 GET K$
350 IF K$="W" AND P1>3 THEN P1=P1-1
360 IF K$="S" AND P1<18 THEN P1=P1+1
370 IF K$="I" AND P2>3 THEN P2=P2-1
380 IF K$="K" AND P2<18 THEN P2=P2+1
390 REM *** BALL PHYSICS ***
400 BX=BX+DX:BY=BY+DY
410 REM *** TOP/BOTTOM BOUNCE ***
420 IF BY<1 THEN BY=1:DY=-DY:POKE 53280,1:FOR I=1 TO 50:NEXT I:POKE 53280,0
430 IF BY>20 THEN BY=20:DY=-DY:POKE 53280,1:FOR I=1 TO 50:NEXT I:POKE 53280,0
440 REM *** PADDLE COLLISION ***
450 IF BX=3 AND BY>=P1-2 AND BY<=P1+2 THEN DX=-DX:DY=DY+INT(RND(1)*3)-1:POKE 53280,5:FOR I=1 TO 50:NEXT I:POKE 53280,0
460 IF BX=37 AND BY>=P2-2 AND BY<=P2+2 THEN DX=-DX:DY=DY+INT(RND(1)*3)-1:POKE 53280,5:FOR I=1 TO 50:NEXT I:POKE 53280,0
470 REM *** SCORING ***
480 IF BX<2 THEN S2=S2+1:POKE 53280,2:FOR I=1 TO 1000:NEXT I:POKE 53280,0:GOSUB 1500
490 IF BX>38 THEN S1=S1+1:POKE 53280,2:FOR I=1 TO 1000:NEXT I:POKE 53280,0:GOSUB 1500
500 REM *** WIN CHECK ***
510 IF S1>=FS THEN GOSUB 2000
520 IF S2>=FS THEN GOSUB 3000
530 FOR I=1 TO 30:NEXT I
540 GOTO 120
550 REM
1500 REM *** SCORE DISPLAY ***
1510 PRINT CHR$(147)
1520 PRINT
1530 PRINT "  PLAYER 1: ";S1
1540 PRINT "  PLAYER 2: ";S2
1550 PRINT
1560 IF S1>S2 THEN PRINT "  PLAYER 1 LEADS!"
1570 IF S2>S1 THEN PRINT "  PLAYER 2 LEADS!"
1580 IF S1=S2 THEN PRINT "  TIED!"
1590 PRINT
1600 PRINT "  PRESS FIRE"
1610 GET K$:IF K$="" THEN GOTO 1610
1620 GOTO 70
1630 REM
2000 REM *** PLAYER 1 WINS ***
2010 PRINT CHR$(147)
2020 POKE 53280,5:POKE 53281,13
2030 PRINT
2040 PRINT "  *** PLAYER 1 WINS! ***"
2050 PRINT
2060 PRINT "  FINAL SCORE"
2070 PRINT "  P1: ";S1;" - P2: ";S2
2080 PRINT
2090 PRINT "  PRESS FIRE FOR REMATCH"
2100 GET K$:IF K$="" THEN GOTO 2100
2110 S1=0:S2=0:GOTO 70
2120 REM
3000 REM *** PLAYER 2 WINS ***
3010 PRINT CHR$(147)
3020 POKE 53280,7:POKE 53281,1
3030 PRINT
3040 PRINT "  *** PLAYER 2 WINS! ***"
3050 PRINT
3060 PRINT "  FINAL SCORE"
3070 PRINT "  P1: ";S1;" - P2: ";S2
3080 PRINT
3090 PRINT "  PRESS FIRE FOR REMATCH"
3100 GET K$:IF K$="" THEN GOTO 3100
3110 S1=0:S2=0:GOTO 70