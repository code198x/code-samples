REM Basic Example
10 REM *** BASIC COMBAT ***
20 PH=10:EH=10
30 PRINT CHR$(147)
40 PRINT "YOUR HP:";PH
50 PRINT "ENEMY HP:";EH
60 PRINT
70 PRINT "1=ATTACK 2=DEFEND"
80 GET K$:IF K$="" THEN GOTO 80
90 IF K$="1" THEN EH=EH-3:PRINT "YOU ATTACK!"
100 IF K$="2" THEN PRINT "YOU DEFEND!"
110 FOR I=1 TO 1000:NEXT I
