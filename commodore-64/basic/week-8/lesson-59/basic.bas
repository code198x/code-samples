REM *** LESSON 59: ARCADE ACTION GAME ***
REM Basic Example
10 REM *** BASIC SHOOTER ***
20 PRINT CHR$(147)
30 PX=10:EX=20:BX=-1
40 PRINT CHR$(19)
50 FOR I=0 TO 30
60 IF I=PX THEN PRINT "P";
70 IF I=EX THEN PRINT "E";
80 IF I=BX THEN PRINT "*";
90 IF I<>PX AND I<>EX AND I<>BX THEN PRINT ".";
100 NEXT I
110 GET K$
120 IF K$="D" THEN PX=PX+1
130 IF K$="A" THEN PX=PX-1
140 IF K$=" " AND BX<0 THEN BX=PX
150 IF BX>=0 THEN BX=BX+2
160 IF BX>30 THEN BX=-1
170 IF BX=EX THEN PRINT "HIT!":END
180 GOTO 40