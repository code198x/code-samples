REM *** LESSON 59: ARCADE ACTION GAME ***
REM Practical Example
10 REM *** MULTI-ENEMY ***
20 PRINT CHR$(147)
30 PX=5:SC=0:LI=3
40 DIM EX(3):DIM EY(3)
50 FOR I=1 TO 3:EX(I)=10+I*5:EY(I)=1:NEXT I
60 BX=-1:BY=-1
70 PRINT CHR$(19)
80 PRINT "SCORE:";SC;" LIVES:";LI
90 PRINT
100 FOR I=1 TO 3
110 IF EY(I)>0 THEN PRINT TAB(EX(I));"E"
120 NEXT I
130 IF BY>0 THEN PRINT TAB(BX);"*"
140 PRINT TAB(PX);"P"
150 GET K$
160 IF K$="D" THEN PX=PX+1
170 IF K$="A" THEN PX=PX-1
180 IF K$=" " AND BY<0 THEN BX=PX:BY=5
190 IF BY>0 THEN BY=BY-1
200 FOR I=1 TO 3
210 IF BX=EX(I) AND BY=EY(I) THEN EY(I)=0:SC=SC+10:BY=-1
220 NEXT I
230 GOTO 70