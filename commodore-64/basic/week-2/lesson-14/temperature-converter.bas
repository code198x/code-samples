10 REM *** TEMPERATURE CONVERTER - LESSON 14 ***
20 PRINT CHR$(147)
30 PRINT "TEMPERATURE CONVERTER"
40 PRINT "===================="
50 PRINT
60 PRINT "1. CELSIUS TO FAHRENHEIT"
70 PRINT "2. FAHRENHEIT TO CELSIUS"
80 PRINT
90 INPUT "CHOICE"; C$
100 IF VAL(C$) < 1 OR VAL(C$) > 2 THEN PRINT "INVALID!": GOTO 90
110 CH = VAL(C$)
120 PRINT
130 INPUT "TEMPERATURE"; T$
140 IF VAL(T$) = 0 AND T$ <> "0" THEN PRINT "INVALID!": GOTO 130
150 T = VAL(T$)
160 IF CH = 1 THEN RE = (T * 9 / 5) + 32: U1$ = "C": U2$ = "F"
170 IF CH = 2 THEN RE = (T - 32) * 5 / 9: U1$ = "F": U2$ = "C"
180 REM FORMAT OUTPUT
190 RT$ = STR$(INT(RE * 10 + 0.5) / 10)
200 IF LEFT$(RT$, 1) = " " THEN RT$ = RIGHT$(RT$, LEN(RT$) - 1)
210 PRINT
220 PRINT T$; U1$; " = "; RT$; U2$
230 PRINT
240 INPUT "CONVERT AGAIN (Y/N)"; A$
250 IF LEFT$(A$, 1) = "Y" THEN GOTO 20
260 END
