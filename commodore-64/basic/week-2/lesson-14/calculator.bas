10 REM *** SIMPLE CALCULATOR - LESSON 14 ***
20 PRINT CHR$(147)
30 PRINT "CALCULATOR"
40 PRINT "=========="
50 PRINT
60 INPUT "FIRST NUMBER"; A$
70 IF VAL(A$) = 0 AND A$ <> "0" THEN PRINT "INVALID!": GOTO 60
80 INPUT "OPERATOR (+,-,*,/)"; OP$
90 IF LEN(OP$) <> 1 THEN PRINT "INVALID!": GOTO 80
100 INPUT "SECOND NUMBER"; B$
110 IF VAL(B$) = 0 AND B$ <> "0" THEN PRINT "INVALID!": GOTO 100
120 A = VAL(A$)
130 B = VAL(B$)
140 GOSUB 1000: REM CALCULATE
150 PRINT
160 T$ = STR$(RE)
165 IF LEFT$(T$, 1) = " " THEN T$ = RIGHT$(T$, LEN(T$) - 1)
170 PRINT A$; " "; OP$; " "; B$; " = "; T$
170 PRINT
180 INPUT "AGAIN (Y/N)"; AN$
190 IF LEFT$(AN$, 1) = "Y" THEN GOTO 20
200 END
1000 REM *** CALCULATE ***
1010 IF OP$ = "+" THEN RE = A + B: RETURN
1020 IF OP$ = "-" THEN RE = A - B: RETURN
1030 IF OP$ = "*" THEN RE = A * B: RETURN
1040 IF OP$ = "/" THEN RE = A / B: RETURN
1050 PRINT "UNKNOWN OPERATOR!": GOTO 80
