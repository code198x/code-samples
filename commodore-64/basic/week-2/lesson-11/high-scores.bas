10 REM *** HIGH SCORE SYSTEM - LESSON 11 ***
20 DIM SC(5), NM$(5)
30 GOSUB 1000: REM SETUP SCORES
40 GOSUB 2000: REM DISPLAY SCORES
50 PRINT
60 INPUT "YOUR SCORE"; NS
70 INPUT "YOUR NAME"; NN$
80 GOSUB 3000: REM ADD SCORE
90 GOSUB 2000: REM DISPLAY AGAIN
100 END
1000 REM *** SETUP DEFAULT SCORES ***
1010 FOR I=1 TO 5
1020   SC(I) = (6-I) * 100
1030   NM$(I) = "---"
1040 NEXT I
1050 RETURN
2000 REM *** DISPLAY SCORES ***
2010 PRINT CHR$(147)
2020 PRINT "HIGH SCORES"
2030 PRINT "==========="
2040 PRINT
2050 FOR I=1 TO 5
2060   PRINT I; ". "; NM$(I); " ... "; SC(I)
2070 NEXT I
2080 RETURN
3000 REM *** ADD NEW SCORE ***
3010 REM FIND WHERE IT BELONGS
3020 PO=0
3030 FOR I=1 TO 5
3040   IF NS > SC(I) AND PO=0 THEN PO=I
3050 NEXT I
3060 IF PO=0 THEN RETURN: REM TOO LOW
3070 REM SHIFT SCORES DOWN
3080 FOR I=5 TO PO+1 STEP -1
3090   SC(I) = SC(I-1)
3100   NM$(I) = NM$(I-1)
3110 NEXT I
3120 REM INSERT NEW SCORE
3130 SC(PO) = NS
3140 NM$(PO) = NN$
3150 RETURN
