NEW
10 PRINT CHR$(147)
20 ST=1:SC=0:LV=3
30 REM *** STATE MACHINE ***
40 ON ST GOTO 1000,2000,3000
50 REM *** TITLE SCREEN (ST=1) ***
1000 PRINT CHR$(147)
1010 PRINT "SPACE DODGE"
1020 PRINT
1030 PRINT "PRESS SPACE TO START"
1040 GET K$:IF K$<>" " THEN 1040
1050 ST=2:GOTO 40
2000 REM *** GAME (ST=2) ***
2010 PRINT CHR$(147)
2020 PRINT "SCORE:";SC;"  LIVES:";LV
2030 PRINT
2040 PRINT "PLAYING..."
2050 FOR I=1 TO 100:NEXT I
2060 SC=SC+10:LV=LV-1
2070 IF LV=0 THEN ST=3:GOTO 40
2080 GOTO 2000
3000 REM *** GAME OVER (ST=3) ***
3010 PRINT CHR$(147)
3020 PRINT "GAME OVER"
3030 PRINT
3040 PRINT "FINAL SCORE:";SC
3050 PRINT
3060 PRINT "PLAY AGAIN? (Y/N)"
3070 GET K$:IF K$="" THEN 3070
3080 IF K$="Y" THEN ST=1:GOTO 40
3090 PRINT:PRINT "THANKS FOR PLAYING!"
3100 END
