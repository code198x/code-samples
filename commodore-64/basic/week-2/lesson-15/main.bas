NEW
10 PRINT CHR$(147)
20 DEF FN AR(T)=VY*T-4.9*T*T/(VX*VX)
30 INPUT "ANGLE (45=BEST)";AN
40 INPUT "SPEED (1-20)";SP
50 A=AN*0.01745
60 VX=SP*COS(A)
70 VY=SP*SIN(A)
80 PRINT:PRINT "TRAJECTORY:"
90 FOR T=0 TO 20 STEP 0.5
100 X=VX*T
110 Y=FN AR(T)
120 IF Y<0 THEN 150
130 SX=INT(X):SY=20-INT(Y)
140 IF SX<40 AND SY<25 THEN POKE 1024+SY*40+SX,42
150 NEXT T
160 PRINT:PRINT "HIT GROUND AT X=";INT(X)
