10 REM *** SOUND EFFECTS DEMO - LESSON 15 ***
20 POKE 54296, 15
30 PRINT CHR$(147)
40 PRINT "SOUND EFFECTS"
50 PRINT "============="
60 PRINT
70 PRINT "1. LASER"
80 PRINT "2. EXPLOSION"
90 PRINT "3. JUMP"
100 PRINT "4. COLLECT ITEM"
110 PRINT "5. HIT"
120 PRINT
130 INPUT "CHOICE"; C
140 IF C=1 THEN GOSUB 1000
150 IF C=2 THEN GOSUB 2000
160 IF C=3 THEN GOSUB 3000
170 IF C=4 THEN GOSUB 4000
180 IF C=5 THEN GOSUB 5000
190 GOTO 30
1000 REM *** LASER ***
1010 FOR F=50 TO 10 STEP -2
1020   POKE 54273, F
1030   POKE 54272, 0
1040   POKE 54276, 0
1050   POKE 54277, 0
1060   POKE 54275, 129: REM NOISE
1070   FOR I=1 TO 10: NEXT I
1080   POKE 54275, 128
1090 NEXT F
1100 RETURN
2000 REM *** EXPLOSION ***
2010 POKE 54276, 0
2020 POKE 54277, 0
2030 FOR I=1 TO 50
2040   POKE 54273, INT(RND(1)*50)
2050   POKE 54272, INT(RND(1)*255)
2060   POKE 54275, 129: REM NOISE
2070   FOR J=1 TO 5: NEXT J
2080   POKE 54275, 128
2090 NEXT I
2100 RETURN
3000 REM *** JUMP ***
3010 FOR F=20 TO 40
3020   POKE 54273, F
3030   POKE 54272, 0
3040   POKE 54276, 0
3050   POKE 54277, 240
3060   POKE 54275, 17: REM TRIANGLE
3070   FOR I=1 TO 10: NEXT I
3080   POKE 54275, 16
3090 NEXT F
3100 RETURN
4000 REM *** COLLECT ITEM ***
4010 FOR N=1 TO 8 STEP 2
4020   GOSUB 9000: REM PLAY NOTE N
4030   FOR I=1 TO 100: NEXT I
4040 NEXT N
4050 RETURN
5000 REM *** HIT ***
5010 POKE 54273, 10
5020 POKE 54272, 0
5030 POKE 54276, 0
5040 POKE 54277, 0
5050 POKE 54275, 129: REM NOISE
5060 FOR I=1 TO 100: NEXT I
5070 POKE 54275, 128
5080 RETURN
9000 REM *** PLAY NOTE N ***
9010 RESTORE 9100
9020 FOR I=1 TO N
9030   READ HI, LO
9040 NEXT I
9050 POKE 54273, HI: POKE 54272, LO
9060 POKE 54276, 0: POKE 54277, 240
9070 POKE 54275, 65: REM PULSE
9080 FOR I=1 TO 50: NEXT I
9090 POKE 54275, 64
9100 DATA 8,179, 9,253, 11,179, 12,131
9110 DATA 14,249, 16,195, 18,209, 21,31
9120 RETURN
