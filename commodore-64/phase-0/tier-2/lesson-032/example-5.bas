5500 REM --- ENEMY AI ---
5510 FOR I=0 TO 2
5520 POKE SCREEN+(EY(I)+4)*40+(EX(I)+11),32
5530 IF FRAME MOD RULESPEED(ROOM)<>0 THEN POKE SCREEN+(EY(I)+4)*40+(EX(I)+11),81:GOTO 5580
