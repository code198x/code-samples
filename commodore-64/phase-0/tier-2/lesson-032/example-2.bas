1000 REM --- TITLE ---
1010 SEL=0
1020 GOSUB 4000
1030 GET K$:IF K$="" THEN 1030
1040 IF K$="S" OR K$=CHR$(17) THEN SEL=(SEL+1) MOD 3
1050 IF K$="W" OR K$=CHR$(145) THEN SEL=(SEL-1) MOD 3
1060 IF SEL<0 THEN SEL=2
1070 IF K$=CHR$(13) THEN ON SEL+1 GOTO 1100,1200,1300
1080 GOTO 1020
1100 SCORE=0:LIVES=3:ROOM=1:STATE=2:GOTO 100
1200 GOSUB 4100:STATE=1:GOTO 100
1300 PRINT CHR$(147);"SEE YOU NEXT RUN!":END

4000 REM --- DRAW TITLE MENU ---
4010 PRINT CHR$(147)
4020 PRINT "CIRCUIT RUN"
4030 PRINT "-----------"
4040 FOR I=0 TO 2
4050 IF I=SEL THEN PRINT CHR$(18);"  ";OPT$(I);CHR$(146) ELSE PRINT "  ";OPT$(I)
4060 NEXT I
4070 RETURN

4100 REM --- INSTRUCTIONS ---
4110 PRINT CHR$(147)
4120 PRINT "WASD TO MOVE, AVOID PATROLLERS"
4130 PRINT "COLLECT NODES BEFORE TIMER ENDS"
4140 PRINT "PRESS ANY KEY"
4150 GET K$:IF K$="" THEN 4150
4160 RETURN
