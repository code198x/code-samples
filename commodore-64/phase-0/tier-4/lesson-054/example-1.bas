10 REM *** DEBUGGING DEMO ***
20 GOSUB 900
30 TRACE=1:PAUSE=0
40 PX=120:PY=120:VX=3:VY=0:GRAV=1
50 PRINT CHR$(147)
60 PRINT "D = toggle debug   P = pause   SPACE = step"
70 PRINT
80 GOSUB 300
90 GET K$:IF K$="D" THEN TRACE=1-TRACE
100 IF K$="P" THEN PAUSE=1-PAUSE
110 IF K$=" " AND PAUSE THEN GOTO 140
120 IF PAUSE THEN GOTO 90
130 GOTO 140
140 VY=VY+GRAV
150 PX=PX+VX:PY=PY+VY
160 IF PY>210 THEN PY=210:VY=-INT(VY/2):CALL=1:GOSUB 400
170 GOSUB 200
180 GOSUB 300
190 FOR W=1 TO 4:NEXT W
200 GOTO 90

200 REM *** DRAW SPRITE (TEXT) ***
