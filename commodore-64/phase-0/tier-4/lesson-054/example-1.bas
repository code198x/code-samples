220 PRINT "POS:";PX;",";PY;"    "
230 PRINT TAB(0);
240 PRINT CHR$(19);TAB(PX/8);CHR$(81)
250 RETURN

300 REM *** DEBUG HUD ***
310 IF TRACE=0 THEN RETURN
320 PRINT CHR$(19);TAB(0);
330 PRINT "VX:";VX;"  VY:";VY;"  PAUSE:";PAUSE;"   "
340 RETURN

400 REM *** COLLISION TRACE ***
410 IF TRACE THEN PRINT "BOUNCE!";" VY=";VY
420 RETURN

