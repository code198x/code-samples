10 REM *** MENU DEMO ***
20 GOSUB 9000
30 PRINT CHR$(147)
40 PRINT "COSMIC CAFE OPTIONS"
50 PRINT
60 GOSUB 1000
70 GET K$:IF K$="" THEN GOTO 70
80 IF K$="W" OR K$=CHR$(145) THEN GOSUB 1100
90 IF K$="S" OR K$=CHR$(17) THEN GOSUB 1200
100 IF K$=CHR$(13) OR K$=" " THEN GOSUB 1300
110 IF K$="J" THEN GOSUB 1400
120 GOTO 60

9000 REM *** MENU DATA ***
9010 DIM ITEM$(3),ACTION(3)
9020 DATA "START GAME",1000,"OPTIONS",2000,"HIGH SCORES",3000
9030 FOR I=1 TO 3
9040 READ ITEM$(I):READ ACTION(I)
9050 NEXT I
9060 SEL=1
9070 RETURN

1000 REM *** DRAW MENU ***
1010 FOR I=1 TO 3
1020 PRINT TAB(6);
1030 IF I=SEL THEN PRINT CHR$(18);"> ";ITEM$(I);CHR$(146) ELSE PRINT "  ";ITEM$(I)
1040 NEXT I
1050 PRINT TAB(4);"W/S = MOVE  RETURN = SELECT  J = JOYSTICK"
1060 RETURN

1100 REM *** MOVE UP ***
1110 SEL=SEL-1:IF SEL<1 THEN SEL=3
1120 PRINT CHR$(147):PRINT "COSMIC CAFE OPTIONS":PRINT
1130 GOSUB 1000
1140 RETURN

1200 REM *** MOVE DOWN ***
1210 SEL=SEL+1:IF SEL>3 THEN SEL=1
1220 PRINT CHR$(147):PRINT "COSMIC CAFE OPTIONS":PRINT
1230 GOSUB 1000
1240 RETURN

1300 REM *** EXECUTE OPTION ***
1310 PRINT CHR$(147):PRINT "RUNNING " ;ITEM$(SEL)
1320 GOSUB ACTION(SEL)
1330 PRINT :PRINT "PRESS ANY KEY TO RETURN"
1340 GET K$:IF K$="" THEN 1340
1350 PRINT CHR$(147):PRINT "COSMIC CAFE OPTIONS":PRINT
1360 GOSUB 1000
1370 RETURN

1400 REM *** JOYSTICK SUPPORT ***
1410 V=PEEK(56320)
1420 IF V AND 1=0 THEN GOSUB 1100
1430 IF V AND 2=0 THEN GOSUB 1200
1440 IF V AND 16=0 THEN GOSUB 1300
1450 RETURN

