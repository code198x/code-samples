10 REM *** SMOOTH SCROLL STRIP ***
20 MESSAGE$="   198X HYPERDRIVE ONLINE   "
30 SPEED=3
40 PRINT CHR$(147)
50 BASE=PEEK(53270) AND 248
60 FOR C=0 TO 39:POKE 1024+C,32:NEXT C
70 POS=1
80 CHAR=ASC(MID$(MESSAGE$,POS,1))-32
90 FOR SHIFT=0 TO 7
100 POKE 53270,BASE OR SHIFT
110 FOR W=1 TO SPEED:NEXT W
120 NEXT SHIFT
130 FOR COL=0 TO 38
140 POKE 1024+COL,PEEK(1025+COL)
150 NEXT COL
160 POKE 1024+39,CHAR
170 POS=POS+1:IF POS>LEN(MESSAGE$) THEN POS=1
180 CHAR=ASC(MID$(MESSAGE$,POS,1))-32
190 POKE 53270,BASE
200 GET K$:IF K$=" " THEN END
210 GOTO 90
