10 REM *** HIGH SCORE TABLE ***
20 DIM NAME$(5),SC(5)
30 FOR I=1 TO 5:READ NAME$(I):READ SC(I):NEXT I
40 GOSUB 150
50 INPUT "YOUR SCORE";NS
60 INPUT "INITIALS (3 CHARS)";N$
70 N$=LEFT$(N$,3)
80 GOSUB 200
90 GOSUB 150
100 INPUT "SAVE TO DISK (Y/N)";A$
110 IF A$="Y" THEN GOSUB 300
120 DATA "ACE",500,"JAX",420,"MIN",360,"SID",220,"DOC",150
130 END
150 PRINT CHR$(147);"TOP PILOTS"
160 FOR I=1 TO 5
170 PRINT I;".";TAB(6);NAME$(I);TAB(12);SC(I)
180 NEXT I
190 RETURN
200 FOR I=1 TO 5
210 IF NS>SC(I) THEN POS=I:GOTO 230
220 NEXT I:RETURN
230 FOR J=5 TO POS+1 STEP -1
240 SC(J)=SC(J-1):NAME$(J)=NAME$(J-1)
250 NEXT J
260 SC(POS)=NS:NAME$(POS)=N$
270 RETURN
300 PRINT "SAVING..."
310 OPEN 1,8,2,"HISCORE,S,W"
320 FOR I=1 TO 5
330 PRINT#1,NAME$(I);",";SC(I)
340 NEXT I
350 CLOSE 1
360 PRINT "DONE. LOAD WITH OPEN 1,8,2:""HISCORE,S,R"""
370 RETURN
