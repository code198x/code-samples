10 REM Cave Explorer
20 REM Simple text adventure game
30 LET ROOM=1
40 LET HASKEY=0
50 LET HASTREASURE=0
60 CLS
70 PRINT AT 1,6;"=== CAVE EXPLORER ==="
80 PRINT AT 3,2;"Find the treasure and escape!"
90 PAUSE 100
100 CLS
110 IF ROOM=1 THEN GOSUB 1000
120 IF ROOM=2 THEN GOSUB 2000
130 IF ROOM=3 THEN GOSUB 3000
140 IF ROOM=4 THEN GOSUB 4000
150 IF HASTREASURE=1 AND ROOM=1 THEN GOSUB 5000
160 PRINT AT 20,0;"Command (N/S/E/W/GET/QUIT): "
170 INPUT C$
180 IF C$="QUIT" THEN STOP
190 IF C$="N" THEN GOSUB 6000
200 IF C$="S" THEN GOSUB 6100
210 IF C$="E" THEN GOSUB 6200
220 IF C$="W" THEN GOSUB 6300
230 IF C$="GET" THEN GOSUB 7000
240 GO TO 100
1000 REM Room 1 - Cave Entrance
1010 PRINT AT 5,4;"You are at the cave entrance."
1020 PRINT AT 7,2;"Sunlight filters in from behind."
1030 PRINT AT 9,2;"A dark tunnel leads north."
1040 RETURN
2000 REM Room 2 - Dark Passage
2010 PRINT AT 5,4;"A dank, dark passage."
2020 PRINT AT 7,2;"Water drips from the ceiling."
2030 PRINT AT 9,2;"Exits: South, East"
2040 RETURN
3000 REM Room 3 - Treasure Chamber
3010 PRINT AT 5,4;"A glittering treasure chamber!"
3020 IF HASTREASURE=0 THEN PRINT AT 7,2;"A golden cup sits on a pedestal."
3030 IF HASTREASURE=1 THEN PRINT AT 7,2;"The pedestal is empty now."
3040 PRINT AT 9,2;"Exit: West"
3050 RETURN
4000 REM Room 4 - Pit Room (Game Over)
4010 PRINT AT 5,4;"You fall into a deep pit!"
4020 PRINT AT 10,6;"GAME OVER"
4030 PAUSE 0
4040 STOP
5000 REM Win Condition
5010 PRINT AT 5,2;"You escaped with the treasure!"
5020 PRINT AT 10,8;"YOU WIN!"
5030 PAUSE 0
5040 STOP
6000 REM Move North
6010 IF ROOM=1 THEN LET ROOM=2
6020 RETURN
6100 REM Move South
6110 IF ROOM=2 THEN LET ROOM=1
6120 IF ROOM=2 THEN PRINT AT 22,2;"Can't go that way!": PAUSE 50
6130 RETURN
6200 REM Move East
6210 IF ROOM=2 THEN LET ROOM=3
6220 IF ROOM=1 THEN LET ROOM=4
6230 RETURN
6300 REM Move West
6310 IF ROOM=3 THEN LET ROOM=2
6320 RETURN
7000 REM Get Item
7010 IF ROOM=3 AND HASTREASURE=0 THEN LET HASTREASURE=1: PRINT AT 22,2;"You take the golden cup!": PAUSE 50
7020 RETURN
