10 REM Fact Finder
20 REM Knowledge database with search
30 DIM Q$(20)
40 DIM A$(20)
50 LET COUNT=0
60 CLS
70 PRINT AT 10,8;"LOADING DATABASE..."
80 READ QU$,AN$
90 IF QU$="END" THEN GO TO 200
100 LET COUNT=COUNT+1
110 LET Q$(COUNT)=QU$
120 LET A$(COUNT)=AN$
130 GO TO 80
200 REM Main menu
210 CLS
220 PRINT AT 2,7;"=== FACT FINDER ==="
230 PRINT AT 5,4;"Knowledge Database"
240 PRINT AT 7,4;COUNT;" facts loaded"
250 PRINT AT 10,6;"1. Browse all facts"
260 PRINT AT 11,6;"2. Search for fact"
270 PRINT AT 12,6;"3. Random quiz"
280 PRINT AT 13,6;"Q. Quit"
290 PRINT AT 16,4;"Choice: ";
300 INPUT CH$
310 IF CH$="1" THEN GOSUB 1000
320 IF CH$="2" THEN GOSUB 2000
330 IF CH$="3" THEN GOSUB 3000
340 IF CH$="Q" OR CH$="q" THEN STOP
350 GO TO 200
1000 REM Browse all facts
1010 CLS
1020 PRINT AT 2,8;"ALL FACTS:"
1030 FOR I=1 TO COUNT
1040 PRINT AT 3+I,0;I;". ";Q$(I)
1050 NEXT I
1060 PRINT AT 22,0;"Press any key..."
1070 PAUSE 0
1080 RETURN
2000 REM Search
2010 CLS
2020 PRINT AT 5,4;"Enter search word:"
2030 INPUT SEARCH$
2040 CLS
2050 PRINT AT 3,6;"SEARCH RESULTS:"
2060 LET FOUND=0
2070 FOR I=1 TO COUNT
2080 IF INSTR (Q$(I),SEARCH$)>0 THEN GOSUB 2500
2090 NEXT I
2100 IF FOUND=0 THEN PRINT AT 10,6;"No matches found."
2110 PRINT AT 22,0;"Press any key..."
2120 PAUSE 0
2130 RETURN
2500 REM Display match
2510 LET FOUND=FOUND+1
2520 PRINT AT 4+FOUND,0;Q$(I)
2530 PRINT AT 5+FOUND,2;"==> ";A$(I)
2540 LET FOUND=FOUND+1
2550 RETURN
3000 REM Random quiz
3010 CLS
3020 LET SCORE=0
3030 FOR QN=1 TO 5
3040 LET RQ=INT(RND*COUNT)+1
3050 PRINT AT 5,2;"Question ";QN;" of 5"
3060 PRINT AT 7,0;Q$(RQ)
3070 PRINT AT 10,2;"Your answer:"
3080 INPUT AN$
3090 IF AN$=A$(RQ) THEN LET SCORE=SCORE+1: PRINT AT 15,6;"Correct!": PAUSE 50
3100 IF AN$<>A$(RQ) THEN PRINT AT 15,4;"Wrong! It was ";A$(RQ): PAUSE 80
3110 CLS
3120 NEXT QN
3130 PRINT AT 10,4;"You scored ";SCORE;" out of 5!"
3140 PAUSE 150
3150 RETURN
