10 REM Simple Maze
20 REM Basic collision detection demo
30 PAPER 0: INK 7: BORDER 1: CLS
40 REM Draw maze border
50 FOR X=0 TO 31
60 PRINT AT 2,X;CHR$ 127
70 PRINT AT 21,X;CHR$ 127
80 NEXT X
90 FOR Y=3 TO 20
100 PRINT AT Y,0;CHR$ 127
110 PRINT AT Y,31;CHR$ 127
120 NEXT Y
130 REM Draw internal walls
140 FOR Y=5 TO 15
150 PRINT AT Y,10;CHR$ 127
160 NEXT Y
170 FOR X=15 TO 25
180 PRINT AT 10,X;CHR$ 127
190 NEXT X
200 REM Player start position
210 LET PX=15: LET PY=10
220 PRINT AT 0,0;"Use Q/A/O/P to navigate"
230 PRINT AT PY,PX;"@"
240 REM Game loop
250 LET NX=PX: LET NY=PY
260 LET K$=INKEY$
270 IF K$="q" THEN LET NY=NY-1
280 IF K$="a" THEN LET NY=NY+1
290 IF K$="o" THEN LET NX=NX-1
300 IF K$="p" THEN LET NX=NX+1
310 REM Collision check
320 IF SCREEN$(NY,NX)=" " THEN GOSUB 1000
330 GO TO 250
1000 REM Move player
1010 PRINT AT PY,PX;" "
1020 LET PX=NX: LET PY=NY
1030 PRINT AT PY,PX;"@"
1040 RETURN
