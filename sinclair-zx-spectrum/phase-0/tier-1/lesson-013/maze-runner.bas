10 REM Maze Runner
20 REM Complete maze game with goal
30 PAPER 0: INK 6: BORDER 1: CLS
40 REM Draw complex maze
50 FOR X=0 TO 31
60 PRINT AT 2,X;CHR$ 127
70 PRINT AT 21,X;CHR$ 127
80 NEXT X
90 FOR Y=3 TO 20
100 PRINT AT Y,0;CHR$ 127
110 PRINT AT Y,31;CHR$ 127
120 NEXT Y
130 REM Vertical walls
140 FOR Y=5 TO 15
150 PRINT AT Y,8;CHR$ 127
160 PRINT AT Y,23;CHR$ 127
170 NEXT Y
180 REM Horizontal walls
190 FOR X=10 TO 20
200 PRINT AT 8,X;CHR$ 127
210 PRINT AT 18,X;CHR$ 127
220 NEXT X
230 REM Gaps in walls
240 PRINT AT 10,8;" "
250 PRINT AT 13,23;" "
260 PRINT AT 8,15;" "
270 PRINT AT 18,15;" "
280 REM Goal marker
290 INK 2: PRINT AT 10,25;"X"
300 REM Player start
310 LET PX=5: LET PY=10
320 INK 7
330 PRINT AT 0,0;"Find the X! Q/A/O/P to move"
340 LET MOVES=0
350 PRINT AT PY,PX;"@"
360 REM Game loop
370 LET NX=PX: LET NY=PY
380 LET K$=INKEY$
390 IF K$="q" THEN LET NY=NY-1
400 IF K$="a" THEN LET NY=NY+1
410 IF K$="o" THEN LET NX=NX-1
420 IF K$="p" THEN LET NX=NX+1
430 REM Check destination
440 LET CH$=SCREEN$(NY,NX)
450 IF CH$="X" THEN GOSUB 2000
460 IF CH$=" " THEN GOSUB 1000
470 GO TO 370
1000 REM Move player
1010 PRINT AT PY,PX;" "
1020 LET PX=NX: LET PY=NY
1030 LET MOVES=MOVES+1
1040 PRINT AT 1,0;"Moves: ";MOVES;"  "
1050 PRINT AT PY,PX;"@"
1060 RETURN
2000 REM Win condition
2010 CLS
2020 PRINT AT 10,8;"YOU FOUND IT!"
2030 PRINT AT 12,6;"Moves taken: ";MOVES
2040 PAUSE 0
2050 STOP
