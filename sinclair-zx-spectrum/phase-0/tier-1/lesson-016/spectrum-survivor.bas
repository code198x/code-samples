10 REM Spectrum Survivor
20 REM Complete action game - Tier 1 synthesis
30 REM Title screen
40 PAPER 0: INK 6: BORDER 1: CLS
50 BRIGHT 1
60 PRINT AT 6,5;"** SPECTRUM SURVIVOR **"
70 BRIGHT 0
80 INK 7
90 PRINT AT 10,4;"Collect all gold pieces"
100 PRINT AT 11,4;"Avoid the chasers!"
110 PRINT AT 14,4;"Controls: Q/A/O/P to move"
120 PRINT AT 17,4;"Good luck... you'll need it"
130 INK 2
140 PRINT AT 20,6;"Press any key to begin"
150 PAUSE 0
160 REM Draw maze
170 CLS
180 FOR X=0 TO 31
190 PRINT AT 2,X;CHR$ 127
200 PRINT AT 21,X;CHR$ 127
210 NEXT X
220 FOR Y=3 TO 20
230 PRINT AT Y,0;CHR$ 127
240 PRINT AT Y,31;CHR$ 127
250 NEXT Y
260 REM Vertical walls
270 FOR Y=5 TO 16
280 PRINT AT Y,10;CHR$ 127
290 PRINT AT Y,20;CHR$ 127
300 NEXT Y
310 REM Horizontal walls
320 FOR X=5 TO 15
330 PRINT AT 10,X;CHR$ 127
340 NEXT X
350 FOR X=15 TO 25
360 PRINT AT 15,X;CHR$ 127
370 NEXT X
380 REM Create gaps
390 PRINT AT 10,10;" "
400 PRINT AT 10,20;" "
410 PRINT AT 10,12;" "
420 PRINT AT 15,17;" "
430 REM Place gold
440 INK 6
450 PRINT AT 5,5;"$"
460 PRINT AT 5,25;"$"
470 PRINT AT 18,5;"$"
480 PRINT AT 18,25;"$"
490 PRINT AT 7,15;"$"
500 PRINT AT 17,15;"$"
510 REM Initialize variables
520 LET SCORE=0
530 LET ITEMS=6
540 LET LIVES=3
550 LET SPEED=3
560 REM Display status
570 INK 7
580 PRINT AT 0,0;"Gold: ";SCORE;"/";ITEMS
590 PRINT AT 0,15;"Lives: ";LIVES
600 PRINT AT 1,0;"Get all gold to survive!"
610 REM Player start
620 LET PX=15: LET PY=11
630 PRINT AT PY,PX;"@"
640 REM Enemies start
650 LET E1X=5: LET E1Y=5
660 LET E2X=25: LET E2Y=18
670 INK 2
680 PRINT AT E1Y,E1X;"!"
690 PRINT AT E2Y,E2X;"!"
700 REM Main game loop
710 REM Player input
720 LET NX=PX: LET NY=PY
730 LET K$=INKEY$
740 IF K$="q" THEN LET NY=NY-1
750 IF K$="a" THEN LET NY=NY+1
760 IF K$="o" THEN LET NX=NX-1
770 IF K$="p" THEN LET NX=NX+1
780 REM Check player destination
790 LET CH$=SCREEN$(NY,NX)
800 IF CH$="$" THEN GOSUB 1000
810 IF CH$=" " THEN GOSUB 2000
820 REM Enemy 1 AI
830 LET OE1X=E1X: LET OE1Y=E1Y
840 IF E1X<PX THEN LET NE1X=E1X+1: ELSE LET NE1X=E1X
850 IF E1X>PX THEN LET NE1X=E1X-1
860 IF E1Y<PY THEN LET NE1Y=E1Y+1: ELSE LET NE1Y=E1Y
870 IF E1Y>PY THEN LET NE1Y=E1Y-1
880 IF SCREEN$(NE1Y,NE1X)=" " THEN LET E1X=NE1X: LET E1Y=NE1Y
890 PRINT AT OE1Y,OE1X;" "
900 INK 2
910 PRINT AT E1Y,E1X;"!"
920 REM Enemy 2 AI
930 LET OE2X=E2X: LET OE2Y=E2Y
940 IF E2X<PX THEN LET NE2X=E2X+1: ELSE LET NE2X=E2X
950 IF E2X>PX THEN LET NE2X=E2X-1
960 IF E2Y<PY THEN LET NE2Y=E2Y+1: ELSE LET NE2Y=E2Y
970 IF E2Y>PY THEN LET NE2Y=E2Y-1
980 IF SCREEN$(NE2Y,NE2X)=" " THEN LET E2X=NE2X: LET E2Y=NE2Y
990 PRINT AT OE2Y,OE2X;" "
1000 INK 2
1010 PRINT AT E2Y,E2X;"!"
1020 REM Check collisions
1030 IF PX=E1X AND PY=E1Y THEN GOSUB 3000
1040 IF PX=E2X AND PY=E2Y THEN GOSUB 3000
1050 REM Check win
1060 IF SCORE=ITEMS THEN GOSUB 4000
1070 REM Check game over
1080 IF LIVES=0 THEN GOSUB 5000
1090 REM Game speed
1100 PAUSE SPEED
1110 GO TO 710
1000 REM Collect gold
1010 PRINT AT PY,PX;" "
1020 LET PX=NX: LET PY=NY
1030 LET SCORE=SCORE+1
1040 PRINT AT 0,6;SCORE;"/";ITEMS
1050 INK 7
1060 PRINT AT PY,PX;"@"
1070 BEEP 0.05,18
1080 REM Increase difficulty
1090 IF SCORE=3 AND SPEED>1 THEN LET SPEED=SPEED-1
1100 RETURN
2000 REM Move player
2010 PRINT AT PY,PX;" "
2020 LET PX=NX: LET PY=NY
2030 PRINT AT PY,PX;"@"
2040 RETURN
3000 REM Lose life
3010 LET LIVES=LIVES-1
3020 PRINT AT 0,22;LIVES
3030 BEEP 0.3,2
3040 IF LIVES>0 THEN GOSUB 6000
3050 RETURN
4000 REM Victory
4010 CLS
4020 INK 6: BRIGHT 1
4030 PRINT AT 8,6;"** YOU SURVIVED! **"
4040 INK 7: BRIGHT 0
4050 PRINT AT 10,5;"You collected all gold!"
4060 PRINT AT 12,7;"Lives remaining: ";LIVES
4070 INK 2
4080 PRINT AT 15,3;"You are a Spectrum champion!"
4090 BEEP 0.3,10: BEEP 0.3,13: BEEP 0.3,15: BEEP 0.3,20
4100 PAUSE 0
4110 STOP
5000 REM Game over
5010 CLS
5020 INK 2: BRIGHT 1
5030 PRINT AT 9,9;"GAME OVER!"
5040 INK 7: BRIGHT 0
5050 PRINT AT 11,4;"You were overwhelmed..."
5060 PRINT AT 13,5;"Gold collected: ";SCORE;"/";ITEMS
5070 IF SCORE>=4 THEN PRINT AT 15,7;"So close! Try again?"
5080 IF SCORE<4 THEN PRINT AT 15,5;"Keep trying, survivor!"
5090 BEEP 1,0
5100 PAUSE 0
5110 STOP
6000 REM Reset after death
6010 PRINT AT PY,PX;" "
6020 PRINT AT E1Y,E1X;" "
6030 PRINT AT E2Y,E2X;" "
6040 LET PX=15: LET PY=11
6050 LET E1X=5: LET E1Y=5
6060 LET E2X=25: LET E2Y=18
6070 INK 7
6080 PRINT AT PY,PX;"@"
6090 INK 2
6100 PRINT AT E1Y,E1X;"!"
6110 PRINT AT E2Y,E2X;"!"
6120 PAUSE 50
6130 RETURN
