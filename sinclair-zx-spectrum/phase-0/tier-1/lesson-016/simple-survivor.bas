10 REM Simple Survivor
20 REM Complete game structure demo
30 REM Title screen
40 PAPER 0: INK 6: BORDER 1: CLS
50 BRIGHT 1
60 PRINT AT 8,6;"SPECTRUM SURVIVOR"
70 BRIGHT 0
80 PRINT AT 12,5;"Collect stars! Avoid enemy!"
90 PRINT AT 16,6;"Press any key to start"
100 PAUSE 0
110 REM Initialize game
120 CLS
130 LET SCORE=0
140 LET LIVES=3
150 LET ITEMS=5
160 REM Place items
170 INK 3
180 PRINT AT 5,8;"*"
190 PRINT AT 5,22;"*"
200 PRINT AT 15,8;"*"
210 PRINT AT 15,22;"*"
220 PRINT AT 10,15;"*"
230 REM Player start
240 LET PX=15: LET PY=10
250 INK 7
260 PRINT AT PY,PX;"@"
270 REM Enemy start
280 LET EX=5: LET EY=5
290 INK 2
300 PRINT AT EY,EX;"!"
310 REM Display status
320 PRINT AT 0,0;"Score: ";SCORE;"/";ITEMS
330 PRINT AT 0,20;"Lives: ";LIVES
340 REM Game loop
350 REM Player input
360 LET NX=PX: LET NY=PY
370 LET K$=INKEY$
380 IF K$="q" AND NY>1 THEN LET NY=NY-1
390 IF K$="a" AND NY<21 THEN LET NY=NY+1
400 IF K$="o" AND NX>0 THEN LET NX=NX-1
410 IF K$="p" AND NX<31 THEN LET NX=NX+1
420 REM Check player destination
430 LET CH$=SCREEN$(NY,NX)
440 IF CH$="*" THEN GOSUB 1000
450 IF CH$=" " THEN GOSUB 2000
460 REM Enemy AI
470 LET OEX=EX: LET OEY=EY
480 IF EX<PX THEN LET EX=EX+1
490 IF EX>PX THEN LET EX=EX-1
500 IF EY<PY THEN LET EY=EY+1
510 IF EY>PY THEN LET EY=EY-1
520 PRINT AT OEY,OEX;" "
530 INK 2
540 PRINT AT EY,EX;"!"
550 REM Check collision
560 IF PX=EX AND PY=EY THEN GOSUB 3000
570 REM Check win
580 IF SCORE=ITEMS THEN GOSUB 4000
590 REM Check lives
600 IF LIVES=0 THEN GOSUB 5000
610 PAUSE 3
620 GO TO 350
1000 REM Collect item
1010 PRINT AT PY,PX;" "
1020 LET PX=NX: LET PY=NY
1030 LET SCORE=SCORE+1
1040 PRINT AT 0,7;SCORE;"/";ITEMS
1050 INK 7
1060 PRINT AT PY,PX;"@"
1070 BEEP 0.05,15
1080 RETURN
2000 REM Move player
2010 PRINT AT PY,PX;" "
2020 LET PX=NX: LET PY=NY
2030 PRINT AT PY,PX;"@"
2040 RETURN
3000 REM Lose life
3010 LET LIVES=LIVES-1
3020 PRINT AT 0,27;LIVES
3030 BEEP 0.2,3
3040 REM Reset if lives remain
3050 IF LIVES>0 THEN GOSUB 6000
3060 RETURN
4000 REM Victory
4010 CLS
4020 INK 6: BRIGHT 1
4030 PRINT AT 9,8;"YOU SURVIVED!"
4040 INK 7: BRIGHT 0
4050 PRINT AT 11,6;"All stars collected!"
4060 PRINT AT 13,9;"Lives left: ";LIVES
4070 BEEP 0.3,10: BEEP 0.3,15: BEEP 0.3,20
4080 PAUSE 0
4090 STOP
5000 REM Game over
5010 CLS
5020 INK 2: BRIGHT 1
5030 PRINT AT 10,9;"GAME OVER!"
5040 INK 7: BRIGHT 0
5050 PRINT AT 12,6;"Final score: ";SCORE;"/";ITEMS
5060 BEEP 1,0
5070 PAUSE 0
5080 STOP
6000 REM Reset positions
6010 PRINT AT PY,PX;" "
6020 PRINT AT EY,EX;" "
6030 LET PX=15: LET PY=10
6040 LET EX=5: LET EY=5
6050 INK 7
6060 PRINT AT PY,PX;"@"
6070 INK 2
6080 PRINT AT EY,EX;"!"
6090 PAUSE 50
6100 RETURN
