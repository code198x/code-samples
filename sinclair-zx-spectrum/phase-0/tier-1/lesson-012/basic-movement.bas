10 REM Basic Character Movement
20 REM Simple QAOP movement demo
30 PAPER 0: INK 7: BORDER 1: CLS
40 LET X=15: LET Y=10
50 PRINT AT 0,0;"Use Q/A/O/P to move"
60 LET OX=X: LET OY=Y
70 LET K$=INKEY$
80 IF K$="q" THEN LET Y=Y-1
90 IF K$="a" THEN LET Y=Y+1
100 IF K$="o" THEN LET X=X-1
110 IF K$="p" THEN LET X=X+1
120 REM Boundary checking
130 IF X<0 THEN LET X=0
140 IF X>31 THEN LET X=31
150 IF Y<2 THEN LET Y=2
160 IF Y>21 THEN LET Y=21
170 REM Erase old, draw new
180 PRINT AT OY,OX;" "
190 PRINT AT Y,X;"@"
200 GO TO 60
