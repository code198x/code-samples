10 REM Smooth Character Mover
20 REM Character movement with coloured trail
30 PAPER 0: INK 2: BORDER 1: CLS
40 LET X=15: LET Y=10
50 LET TRAIL=0
60 PRINT AT 0,0;"Q/A/O/P=move  T=toggle trail"
70 PRINT AT 1,0;"SPACE=change colour"
80 LET C=2
90 LET OX=X: LET OY=Y
100 LET K$=INKEY$
110 IF K$="q" THEN LET Y=Y-1
120 IF K$="a" THEN LET Y=Y+1
130 IF K$="o" THEN LET X=X-1
140 IF K$="p" THEN LET X=X+1
150 IF K$="t" THEN LET TRAIL=1-TRAIL
160 IF K$=" " THEN LET C=C+1: IF C>7 THEN LET C=1
170 REM Boundaries
180 IF X<0 THEN LET X=0
190 IF X>31 THEN LET X=31
200 IF Y<3 THEN LET Y=3
210 IF Y>21 THEN LET Y=21
220 REM Erase or leave trail
230 IF TRAIL=0 THEN PRINT AT OY,OX;" "
240 IF TRAIL=1 THEN PRINT AT OY,OX;"."
250 REM Draw character
260 INK C
270 PRINT AT Y,X;CHR$ 144
280 GO TO 90
