10 REM Simple Chase
20 REM Basic enemy AI demonstration
30 PAPER 0: INK 7: BORDER 1: CLS
40 PRINT AT 0,0;"Escape the enemy! Q/A/O/P=move"
50 REM Player start
60 LET PX=5: LET PY=5
70 PRINT AT PY,PX;"@"
80 REM Enemy start
90 LET EX=25: LET EY=15
100 INK 2
110 PRINT AT EY,EX;"!"
120 REM Game loop
130 REM Player move
140 LET OPX=PX: LET OPY=PY
150 LET K$=INKEY$
160 IF K$="q" AND PY>1 THEN LET PY=PY-1
170 IF K$="a" AND PY<21 THEN LET PY=PY+1
180 IF K$="o" AND PX>0 THEN LET PX=PX-1
190 IF K$="p" AND PX<31 THEN LET PX=PX+1
200 REM Erase old player
210 IF PX<>OPX OR PY<>OPY THEN PRINT AT OPY,OPX;" "
220 INK 7
230 PRINT AT PY,PX;"@"
240 REM Enemy AI
250 LET OEX=EX: LET OEY=EY
260 IF EX<PX THEN LET EX=EX+1
270 IF EX>PX THEN LET EX=EX-1
280 IF EY<PY THEN LET EY=EY+1
290 IF EY>PY THEN LET EY=EY-1
300 REM Erase old enemy
310 PRINT AT OEY,OEX;" "
320 INK 2
330 PRINT AT EY,EX;"!"
340 REM Check collision
350 IF PX=EX AND PY=EY THEN GOSUB 1000
360 REM Slow down
370 PAUSE 3
380 GO TO 130
1000 REM Game over
1010 CLS
1020 INK 2: BRIGHT 1
1030 PRINT AT 10,10;"CAUGHT!"
1040 INK 7: BRIGHT 0
1050 PRINT AT 12,8;"The enemy got you!"
1060 BEEP 1,0
1070 PAUSE 0
1080 STOP
